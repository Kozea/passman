{%- from '_form.html.jinja2' import display_form, display_field -%}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
    <title>Passman</title>
  </head>

  <body>
    <header>
      {% if g.context.user %}
        <ul>
            <li>
              <a href="{{ url_for('display_passwords') }}">mes notes</a>
            </li>
            <li>
              <a href="{{ url_for('display_groups_passwords') }}">groupes</a>
            </li>
        </ul>
        <ul>
            <ul>
              <li>
                <a href="{{ url_for('edit_user') }}">Mettre à jour mon profil</a>
              </li>
              <li>
                <a href="{{ url_for('delete_user') }}">Supprimer mon compte</a>
              </li>
            </ul>
            <li>
              <a href="{{ url_for('logout') }}">me déconnecter</a>
            </li>
        </ul>
      {% else %}
        <ul></ul>
      {% endif %}
    </header>

    {% with messages = get_flashed_messages() %}
      {% if messages %}
        <aside>
          <ul>
            {% for message in messages %}
              <li>{{ message }}</li>
            {% endfor %}
          </ul>
        </aside>
      {% endif %}
    {% endwith %}

    <main>
      <h1>passman</h1>
      {% block content %}
      {% endblock %}
    </main>
  </body>
</html>
